    <style>  
        .logout-button {  
            background-color: transparent;  
            color: #777;  
            border: none;  
            cursor: pointer;  
            font-size: 14px;  
            margin-left: 20px;  
            transition: color 0.3s ease;  
        }  

        .logout-button:hover {  
            color: #333;  
        }  

        .refresh-button {  
            background-color: var(--primary-blue);  
            color: white;  
            border: none;  
            padding: 8px 15px;  
            border-radius: 6px;  
            cursor: pointer;  
            margin-left: 20px;  
            display: inline-block;  
        }  

        .refresh-button:hover {  
            background-color: var(--dark-blue);  
        }  

        .add-auditory-button {  
            background-color: var(--primary-blue);  
            color: white;  
            border: none;  
            padding: 10px 20px;  
            border-radius: 6px;  
            cursor: pointer;  
            margin-left: 10px;  
            transition: all 0.3s;  
            font-size: 16px;  
        }  

        .add-auditory-button:hover {  
            background-color: var(--dark-blue);  
        }  
        
        table {  
            width: 100%;  
            border-collapse: collapse;  
        }  

        th, td {  
            padding: 10px;  
            border: 1px solid #ddd;  
            text-align: center;  
        }  

        th {  
            background-color: #f4f4f4;  
        }  
        
        .button-container {  
            display: flex;  
            justify-content: flex-end;  
